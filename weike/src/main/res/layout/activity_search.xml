<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.chenluwei.weike.activity.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff3097fd"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <EditText
            android:layout_weight="1"
            android:id="@+id/et_serach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/tv_serach_bg_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/tv_serach_left_selector"
            android:drawablePadding="5dp"
            android:text="全网搜索"
            android:textColor="@drawable/tv_serach_textcolor_selector"
            android:textSize="15sp" />



        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:id="@+id/iv_search"
            android:src="@drawable/voice_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_search_go"
            android:text="搜索"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:cacheColorHint="@color/transparent"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
        <TextView
            android:layout_centerInParent="true"
            android:text="没有相关的内容，换个关键字试试？"
            android:id="@+id/tv_search_info"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
