<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ff3097fd"
    android:gravity="center_vertical"
    android:orientation="horizontal">



    <EditText
        android:layout_weight="1"
        android:id="@+id/tv_serach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/tv_serach_bg_selector"
        android:clickable="true"
        android:drawableLeft="@drawable/tv_serach_left_selector"
        android:drawablePadding="5dp"
        android:text="全网搜索"
        android:textColor="@drawable/tv_serach_textcolor_selector"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_topbanner_game"
            android:id="@+id/iv_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignRight="@id/iv_game"
            android:background="@drawable/do_game"
            android:layout_width="6dp"
            android:layout_height="6dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_topbanner_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>